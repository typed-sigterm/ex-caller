{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:scope-appdata-recursive",
    {
      "identifier": "fs:read-all",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:write-all",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
    },
    "shell:allow-open",
    "updater:default"
  ]
}
